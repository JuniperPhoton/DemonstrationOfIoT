                                    <TextBlock Text="{Binding DisplayName}" Grid.Column="0" Foreground="{StaticResource MyerPlantBlack}" FontSize="25" FontWeight="SemiBold" Margin="20,0,0,0"/>
                                </StackPanel>

                            </DataTemplate>
                        </ListView.ItemTemplate>

                    </ListView>
                </StackPanel>

                <StackPanel VerticalAlignment="Bottom">
                    <Button HorizontalAlignment="Stretch" Command="{Binding SettingCommand}" VerticalAlignment="Bottom" Style="{StaticResource ButtonStyle2}" Margin="0" Background="{StaticResource MyerPlantWhite}" BorderThickness="0" BorderBrush="{x:Null}" Height="27" HorizontalContentAlignment="Left" FontSize="16">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="SettingBtnBlock"  Foreground="{StaticResource MyerPlantBlack}" Text="SETTING" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        </StackPanel>

                    </Button>
                    <Button HorizontalAlignment="Stretch" Command="{Binding AboutCommand}" VerticalAlignment="Bottom" Style="{StaticResource ButtonStyle2}" Margin="0" Background="{StaticResource MyerPlantWhite}" BorderThickness="0" BorderBrush="{x:Null}" Height="27" HorizontalContentAlignment="Left" FontSize="16">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="AboutBtnBlock" Text="ABOUT" Foreground="{StaticResource MyerPlantBlack}" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        </StackPanel>
                    </Button>

                </StackPanel>

            </Grid>
        </Grid>
        <Grid x:Name="ToastGrid" RenderTransformOrigin="0.5,0.5">
            <Grid.RenderTransform>
                <CompositeTransform TranslateY="-104"/>
            </Grid.RenderTransform>
            <Border x:Name="border" Background="{StaticResource MyerPlantTheme}" BorderBrush="{StaticResource MyerPlantTheme}" RenderTransformOrigin="0.5,0.5">
                <TextBlock x:Name="toastTB" Text="Successfully changed!" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,5" FontSize="20"/>
            </Border>
        </Grid>
        <Grid x:Name="loadingGrid" Visibility="Collapsed" Grid.RowSpan="4">
            <Border Background="Black" Opacity="0.9"/>
            <ProgressRing IsActive="True" Background="{x:Null}"></ProgressRing>
        </Grid>
    </Grid>
</Page>